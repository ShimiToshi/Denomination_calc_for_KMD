<StackZone>
    id : stackzone
    orientation: "horizontal"

    BoxLayout:
        orientation: "vertical"
        size_hint_x: 0.35
        padding_x : 5

        Label:
            text : "Name"
            size_hint_y: 0.05
        Label:
            padding_x : 5
            size_hint_y: 0.95
            text_size: self.size[0], self.size[1]-30
            halign: 'right'
            valign: 'top'
            id : stacknamelabel
            text:   ""

    BoxLayout:
        orientation: "vertical"
        size_hint_x: 0.35
        padding_x : 5

        Label:
            size_hint_y: 0.05
            text : "Wag"

        Label:
            size_hint_y: 0.95
            padding_x : 5
            text_size: self.size[0], self.size[1]-30
            halign: 'right'
            valign: 'top'
            id : stackwaglabel
            text:   ""

    BoxLayout:
        orientation: "vertical"
        size_hint_x: 0.3
        padding_x : 5

        Label:
            size_hint_y: 0.05
            text : "Type"

        Label:
            size_hint_y: 0.95
            padding_x : 20
            text_size: self.size[0], self.size[1]-30
            halign: 'right'
            valign: 'top'
            id : stacktypelabel
            text:   ""
