<RootWidget>

    orientation : 'horizontal'

    ButtonZone:
        canvas:
            Color:
                rgba: 0.4, 0.4, 0.4, .9
            Line:
                width: 2.
                rectangle: (self.x, self.y, self.width, self.height)
        size_hint_x : 0.2

    CmdZone:
        canvas:
            Color:
                rgba: 0.4, 0.4, 0.4, .9
            Line:
                width: 2.
                rectangle: (self.x, self.y, self.width, self.height)
        size_hint_x : 0.6

    StackZone:
        canvas:
            Color:
                rgba: 0.4, 0.4, 0.4, .9
            Line:
                width: 2.
                rectangle: (self.x, self.y, self.width, self.height)
        size_hint_x : 0.2
